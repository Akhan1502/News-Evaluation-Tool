{
  "manifest_version": 2,
  "name": "News Analyzer",
  "version": "1.0.0",
  "description": "Analyzes news content for trustworthiness",
  "permissions": [
    "activeTab",
    "tabs",
    "http://localhost:8000/*",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "news-analyzer@example.com"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
} 